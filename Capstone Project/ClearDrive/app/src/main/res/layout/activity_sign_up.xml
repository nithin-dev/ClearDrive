<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp">

        <EditText
            android:id="@+id/editTextFirstName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginEnd="5dp"
            android:paddingStart="10dp"
            android:background="@drawable/rectangle_white"
            android:hint="First Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginStart="5dp"
            android:paddingStart="10dp"
            android:background="@drawable/rectangle_white"
            android:hint="Last Name"
            android:inputType="text" />

    </LinearLayout>

    <EditText
        android:id="@+id/editTextMobile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/rectangle_white"
        android:hint="Mobile Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/rectangle_white"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextSignupUsername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/rectangle_white"
        android:hint="Username"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextSignupPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/rectangle_white"
        android:hint="Password"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="People who use our service may have uploaded your contact information to ClearDrive"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="By clicking Sign Up, you agree to our Terms, Privacy policies and cookies. You may receive SMS Notifications from us and can opt out any time."
        android:textColor="@color/white"
      />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSignup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/rectangle_button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tvLogin"
        android:text="Already Registered!  LOGIN"
        android:textColor="@color/white"
        />


</LinearLayout>
